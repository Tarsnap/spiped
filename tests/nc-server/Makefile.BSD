# Program name.
PROG	=	nc-server

# Don't install it.
NOINST	=	1

# Useful relative directories
LIBCPERCIVA_DIR	=	../../libcperciva

# Main test code
SRCS	=	main.c
SRCS	+=	simple_server.c

# Data structures
SRCS	+=	${LIBCPERCIVA_DIR}/datastruct/elasticarray.c
SRCS	+=	${LIBCPERCIVA_DIR}/datastruct/ptrheap.c
SRCS	+=	${LIBCPERCIVA_DIR}/datastruct/timerqueue.c
IDIRS	+=	-I${LIBCPERCIVA_DIR}/datastruct

# Event loop
SRCS	+=	${LIBCPERCIVA_DIR}/events/events_immediate.c
SRCS	+=	${LIBCPERCIVA_DIR}/events/events_network.c
SRCS	+=	${LIBCPERCIVA_DIR}/events/events_network_selectstats.c
SRCS	+=	${LIBCPERCIVA_DIR}/events/events_timer.c
SRCS	+=	${LIBCPERCIVA_DIR}/events/events.c
IDIRS	+=	-I${LIBCPERCIVA_DIR}/events

# Event-driven networking
SRCS	+=	${LIBCPERCIVA_DIR}/network/network_accept.c
SRCS	+=	${LIBCPERCIVA_DIR}/network/network_read.c
IDIRS	+=	-I${LIBCPERCIVA_DIR}/network

# Utility functions
SRCS	+=	${LIBCPERCIVA_DIR}/util/monoclock.c
SRCS	+=	${LIBCPERCIVA_DIR}/util/sock.c
SRCS	+=	${LIBCPERCIVA_DIR}/util/warnp.c
IDIRS	+=	-I${LIBCPERCIVA_DIR}/util

.include <bsd.prog.mk>
